@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADF</title>
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon/favicon-16x16.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,600,700&display=fallback">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.14.0/css/all.css" crossorigin="anonymous">
    <link href="~/lib/jquery-loader/jquery.loading.min.css" rel="stylesheet" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link href="~/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/lib/vue-select/vue-select.css" rel="stylesheet" />
    <link href="~/lib/v-tooltip/v-tooltip.css" rel="stylesheet" />
    <link href="https://cdn.syncfusion.com/ej2/bootstrap4.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="hold-transition sidebar-mini layout-fixed control-sidebar-slide-open accent-navy text-sm" style="height: auto;">
    <div class="wrapper">

        <!-- Navbar -->
        <div id="vc_layout_navbar">
            <nav class="main-header navbar navbar-expand navbar-dark navbar-navy">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @*<li class="nav-item">
                                <a class="nav-link top-nav" href="/">Home</a>
                            </li>*@
                    }

                </ul>
                <ul class="navbar-nav navbar-right ml-auto">

                    @if (User.Identity.IsAuthenticated)
                    {

                       @*  <li class="nav-item dropdown">
                                <a v-cloak class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @ViewBag.DisplayName
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                    <a class="dropdown-item" title="Logout" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </a>

                                </div>
                            </li> *@
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Signout <i class="far fa-sign-out-alt ml-1"></i></a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign In <i class="far fa-sign-in-alt ml-1"></i></a>
                        </li>
                    }

                </ul>
            </nav>
        </div>
    </div>
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar elevation-4 sidebar-light-lightblue sidebar-no-expand">
        <!-- Brand Logo -->
        <a href="/" class="brand-link navbar-navy text-sm">
            @* <img src="~/images/logo.png" alt="Starter App Logo" class="brand-image img-circle elevation-3" style="opacity: .8"> *@
            <span class="brand-text font-weight-light text-white">ADF Trigger</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar" id="vc_sidebar_app">
            <!-- Sidebar user panel (optional) -->
            @if (@ViewBag.DisplayName != null)
            {
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        @*<img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">*@
                        <img src="~/images/user.png" class="img-circle elevation-2" alt="User Image" />
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@ViewBag.DisplayName</a>
                    </div>
                </div>
            }
            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column nav-flat" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item has-treeview menu-open">
                            <a href="/" class="nav-link @(Context.Request.Path == "/" ? "active" : "")">
                                <i class="far fa-play-circle"></i>
                                <p>
                                    Pipeline Run
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview menu-open">
                            <a href="/Pipelines" class="nav-link @(Context.Request.Path == "/Pipelines" ? "active" : "")">
                                <i class="fas fa-tools"></i>
                                <p>
                                    Pipeline Settings
                                </p>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    @*<header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StarterApp.Web</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>*@
    <div class="content-wrapper">
        <main role="main" class="@(User.Identity.IsAuthenticated ? "" : "p-4")">
            @RenderBody()
        </main>
    </div>

    <footer class="main-footer">
        Developed & maintained by <a href="https://www.numberskills.se/" target="_blank">Numberskills Sverige AB</a>

        <div class="float-right d-none d-sm-inline-block">
            <b>&nbsp;</b>
        </div>
    </footer>
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/notify/notify.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>

    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/jquery-loader/jquery.loading.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/lib/vue-select/vue-select.js"></script>
    <script src="~/lib/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://unpkg.com/vue-cookies@1.7.4/vue-cookies.js"></script>

    <script src=https://cdn.syncfusion.com/ej2/19.1.57/ej2-vue-es5/dist/ej2-vue.min.js type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue-tables-2@1.4.70/dist/vue-tables-2.min.js"></script>
    <script src="https://unpkg.com/vee-validate@@<3.0.0"></script>
    <script src="~/lib/v-tooltip/v-tooltip.min.js"></script>
    <script src="~/plugins/moment.min.js"></script>
    <script src="~/js/helper.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js" integrity="sha512-CryKbMe7sjSCDPl18jtJI5DR5jtkUWxPXWaLCst6QjH8wxDexfRJic2WRmRXmstr2Y8SxDDWuBO6CQC6IE4KTA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
